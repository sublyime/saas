# Database
DATABASE_URL=postgresql://user:password@localhost:5432/incident_resolver
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Server
PORT=3000
HOST=0.0.0.0

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-for-aes-256

# AI Integration (Choose ONE provider)
# Option 1: OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Option 3: Ollama (Local LLM - recommended for development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Default AI Provider (openai | anthropic | ollama)
AI_PROVIDER=ollama
